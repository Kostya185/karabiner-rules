{
  "title": "Windows-specific key mappings",
  "rules": [
    {
      "description": "Left Command + Space → Win+Space only in Windows apps, Right Command → Insert everywhere",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$",
                "^com\\.parallels\\.desktop$",
                "^com\\.vmware\\.fusion$"
              ]
            }
          ],
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_gui"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "insert"
            }
          ]
        }
      ]
    }
  ]
}
